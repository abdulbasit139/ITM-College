@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewBag.data;
}
<div class="container" style="margin: 100px auto">
    <h3 class="text-center">Profile</h3>
    <div class="row">
        <div class="col-md-6">
            <h4 class="text-center">@data.name</h4>
            <form asp-controller="Admin" asp-action="UpdateName" method="post" class="w-50 m-auto">
                <div class="form-group mt-3">
                    <input type="text" class="form-control" name="name" placeholder="Update Name" required>
                    <button type="submit" class="btn btn-dark form-control mt-2">Update</button>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            
            <h4 class="text-center mt-3">@data.email</h4>
            <form asp-controller="Admin" asp-action="UpdateEmail" method="post" class="w-50 m-auto">
                <div class="form-group mt-3">
                    <input type="email" class="form-control" name="email" placeholder="Update Email" required>
                    <button type="submit" class="btn btn-dark form-control mt-2">Update</button>
                </div>
            </form>
            <form asp-controller="Admin" asp-action="UpdatePass" method="post" class="w-50 m-auto">
                <div class="form-group mt-3">
                    <input type="password" class="form-control" name="pass" placeholder="Update Password" required>
                    <button type="submit" class="btn btn-dark form-control mt-2">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
