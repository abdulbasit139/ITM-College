@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">

    <h3 class="text-center">Teachers</h3>

    <div class="row justify-content-between">
        <div class="col-md-5">
            <table class="table">
                <thead>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Action</th>
                </thead>
                <tbody>

                    @foreach(var a in ViewBag.teachers)
                    {
                        <tr>
                            <td>@a.id</td>
                            <td>@a.name</td>
                            <td>@a.email</td>
                            <td>@a.salary</td>
                            <td><a href="@Url.Action("TutorDetails", "Admin", new {@a.id})" class="btn btn-dark">View</a>
                                <a href="@Url.Action("RemoveTutor", "Admin", new {@a.id})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <h5 class="text-center mb-3 mt-5">Add Tutor</h5>
            <form asp-controller="Admin" asp-action="AddTeacher" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col-md-6 form-group">
                        <input type="text" name="name" class="form-control" placeholder="Name" required>
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <input type="email" class="form-control" name="email" placeholder="Email" required>
                    </div>
                </div>
                <select class="form-control p-3" name="subject" required>
                    <option value="English">English</option>
                    <option value="Maths">Maths</option>
                    <option value="Computer">Computer</option>
                    <option value="Physics">Physics</option>
                    <option value="Chemistery">Chemistery</option>
                    <option value="Biology">Biology</option>
                </select>
                <div class="form-group mt-3">
                    <input type="file" class="form-control" style="background: white;" name="image" accept="image/*" required>
                </div>
                <div class="form-group mt-3">
                    <input type="number" placeholder="Salary" class="form-control" style="background:  white;" name="salary"  required>
                </div>
                <div class="form-group mt-3">
                    <textarea rows="5" placeholder="Description" class="form-control" name="descirption"></textarea>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-dark" style="border-radius: 0px;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>