@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewBag.course;
}

<div class="container">
    <h3 class="text-center mt-3">Course Details</h3>
    <div class="row justify-content-evenly mt-5">
        <div class="col-md-5">
            <img src="~/uploads/@data.imagePath" width="100%"/>
        </div>
        <div class="col-md-5">
            <h3 class="my-2">@data.title</h3>
            <p>@data.description</p>
            <div class="row mt-3 justify-content-between">
                <div class="col-3">
                    <h4><b>$@data.price</b></h4>
                </div>
                <div class="col-5">
                    <h4>@data.duration</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="col-md-3 text-center">
            <a href="@Url.Action("DeleteCourse", "Admin", new {@data.id})" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>