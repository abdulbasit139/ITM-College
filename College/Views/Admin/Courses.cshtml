@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewBag.data;
}
<div class="container">

    <h3 class="text-center">Courses</h3>

    <div class="row justify-content-between">
        <div class="col-md-5">
            <table class="table">
                <thead>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Duration</th>
                    <th>Price</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    
                    @foreach (var a in data)
                    {
                        <tr>
                            <td>@a.id</td>
                            <td>@a.title</td>
                            <td>@a.duration</td>
                            <td>$@a.price</td>
                            <td>
                                <a href="@Url.Action("ViewCourse", "Admin", new {@a.id})" class="btn btn-dark">View</a>
                                <a href="@Url.Action("DeleteCourse", "Admin", new {@a.id})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <h5 class="text-center mb-3 mt-5">Add Courses</h5>
            <form asp-controller="Admin" asp-action="AddCourses" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <input type="text" name="title" class="form-control" placeholder="Course Title" required>
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <input type="number" class="form-control" name="price"  placeholder="$Price" required>
                    </div>
                </div>
                <select class="form-control p-3" name="duration" required>
                    <option value="Three Months">Three Months</option>
                    <option value="Eight Months">Eight Months</option>
                    <option value="One Year">One Year</option>
                    <option value="Three Years">Three Years</option>
                    <option value="Four Years">Four Years</option>
                </select>
                <div class="form-group mt-3">
                    <input type="file" class="form-control" style="background: white;" name="image" accept="image/*" required>
                </div>
                <div class="form-group mt-3">
                    <textarea class="form-control" name="description" rows="5" placeholder="Course Description" required></textarea>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-dark" style="border-radius: 0px;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

    
