@{
    var data = ViewBag.data;
    var num = 1;
}
<div class="container ">
<h2 class="text-center" style="margin-top: 100px; margin-bottom: 40px;">Courses</h2>
    @foreach(var a in data)
    {
        
        if (num == 1)
        {
            <div class="row justify-content-evenly" style="margin-bottom: 150px;">
                <div class="col-md-5">
                    <img src="~/uploads/@a.imagePath" width="100%" />
                </div>
                <div class="col-md-5">
                    <h3 class="my-2">@a.title</h3>
                    <div>
                        <p> @a.description</p>
                    </div>
                    <div class="row mt-3 justify-content-between">
                        <div class="col-3">
                            <h4><b>$@a.price</b></h4>
                        </div>
                        <div class="col-5">
                            <h4>@a.duration</h4>
                        </div>
                    </div>
                </div>
            </div>
            num = 2;
        }
        else if (num == 2)
        {
            <div class="row justify-content-evenly" style="margin-bottom: 150px;">
                
                <div class="col-md-5">
                    <h3 class="my-2">@a.title</h3>
                    <div >
                        <p> @a.description</p>
                    </div>
                    <div class="row mt-3 justify-content-between">
                        <div class="col-3">
                            <h4><b>$@a.price</b></h4>
                        </div>
                        <div class="col-5">
                            <h4>@a.duration</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <img src="~/uploads/@a.imagePath" width="100%" />
                </div>
            </div>
            num = 1;
        }

    }
</div>